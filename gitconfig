[core]
  editor = "vim"
[color]
 branch = auto
 diff = auto
 status = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[merge]
  tool = opendiff
[core]
  legacyheaders = false
  excludesfile = /Users/ehrenmurdick/.gitignore
[repack]
  usedeltabaseoffset = true
[alias]
  ci     = commit
  co     = checkout
  st     = status
  rm-all = !git st | ack deleted | awk '{print $3}' | xargs git rm
  fx     = !git fetch && gitx --all
  x      = !gitx --all
[push]
  default = current
